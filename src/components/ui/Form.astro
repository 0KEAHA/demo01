---
import { Image } from "astro:assets";

import decorForm from "../../assets/pics/contact-pic.png";
---

<div
  class="flex relative justify-start items-center p-[60px] bg-[#F3F3F3] rounded-[45px]"
>
  <form class="bg-white p-6 rounded shadow-md h-full w-full max-w-md">
    <div class="mb-4">
      <label for="checkbox" class="block text-gray-700 mb-2">Checkbox</label>
      <input
        type="checkbox"
        id="checkbox"
        name="checkbox"
        class="text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
      />
      <label for="checkbox2" class="block text-gray-700 mb-2">Checkbox</label>
      <input
        type="checkbox"
        id="checkbox2"
        name="checkbox2"
        class="text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
      />
    </div>

    <div class="mb-4">
      <label for="name" class="block text-gray-700 mb-2">Name</label>
      <input
        type="text"
        id="name"
        name="name"
        placeholder="Name"
        class="w-full px-3 py-2 border rounded-md text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
      />
    </div>

    <div class="mb-4">
      <label for="email" class="block text-gray-700 mb-2">Email*</label>
      <input
        type="text"
        id="email"
        name="email"
        placeholder="Email"
        class="w-full px-3 py-2 border rounded-md text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
      />
    </div>
    <div class="mb-4">
      <label for="message" class="block text-gray-700 mb-2">Message*</label>
      <textarea
        id="message"
        name="message"
        placeholder="Message"
        class="w-full px-3 py-2 border rounded-md text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
      ></textarea>
    </div>

    <button
      type="submit"
      name="submit"
      class="w-full py-2 px-4 bg-blue-500 text-white rounded-md hover:bg-blue-600"
      >Send</button
    >
  </form>

  <picture class="absolute right-0 top-[5%] bottom-[5%]">
    <Image src={decorForm} alt="decor" />
  </picture>
</div>
